<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox fx:id="rowContainer" alignment="CENTER_LEFT" prefHeight="71.0" prefWidth="588.0" spacing="35.0" style="-fx-border-color: #8CABA2; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ahhasc.View.Component.AppointmentRowPayment">
   <children>
      <VBox prefHeight="48.0" prefWidth="156.0">
         <children>
            <Text fx:id="timeText" fill="#aaaaaa" strokeType="OUTSIDE" strokeWidth="0.0" text="Due On">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Text>
            <Label fx:id="timeStartLabel" text="18-2-2021 5:30pm" textFill="#5e5e5e">
               <font>
                  <Font name="Nunito Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox prefHeight="49.0" prefWidth="98.0">
         <children>
            <Text fx:id="customerText" fill="#aaaaaa" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Text>
            <Label fx:id="customerNameLabel" text="Ben Lim" textFill="#5e5e5e">
               <font>
                  <Font name="Nunito Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox prefHeight="49.0" prefWidth="60.0">
         <children>
            <Text fx:id="contactNumberText" fill="#aaaaaa" strokeType="OUTSIDE" strokeWidth="0.0" text="Contact Number">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Text>
            <Label fx:id="contactNumberLabel" text="0123456789" textFill="#5e5e5e">
               <font>
                  <Font name="Nunito Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox prefHeight="49.0" prefWidth="78.0">
         <children>
            <Text fx:id="paymentText" fill="#aaaaaa" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment">
               <font>
                  <Font name="Nunito Bold" size="14.0" />
               </font>
            </Text>
            <Label fx:id="paymentLabel" text="200$" textFill="#5e5e5e">
               <font>
                  <Font name="Nunito Bold" size="16.0" />
               </font>
               <VBox.margin>
                  <Insets top="3.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Button fx:id="paidButton" mnemonicParsing="false" onMouseClicked="#paymentCompleted" prefWidth="65.0" style="-fx-background-color: #81BE9E; -fx-border-radius: 5; -fx-background-radius: 5;" text="Paid" textFill="WHITE">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font name="Nunito Regular" size="13.0" />
         </font>
         <effect>
            <DropShadow offsetY="4.0">
               <color>
                  <Color opacity="0.25" />
               </color>
            </DropShadow>
         </effect>
      </Button>
   </children>
   <padding>
      <Insets bottom="12.0" left="11.0" right="16.0" top="10.0" />
   </padding>
</HBox>
